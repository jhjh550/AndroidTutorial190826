<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ff0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#0f0"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView

        android:id="@+id/textViewID"
        android:textSize="30dp"
        android:text="ID:"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_alignBaseline="@id/textViewID"
            android:layout_toRightOf="@id/textViewID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignLeft="@id/textViewID"
            android:id="@+id/textViewPW"
            android:layout_below="@id/textViewID"
            android:textSize="30dp"
            android:text="PW:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_alignBaseline="@id/textViewPW"
            android:layout_toRightOf="@id/textViewPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewPW"
            android:text="login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>